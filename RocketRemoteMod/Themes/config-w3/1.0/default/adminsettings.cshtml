                </div>
            </div>
            <div class="w3-col m12 w3-padding">
                <label>@ResourceKey("DNNrocket.sitekey")</label>
                <div class="w3-border w3-padding  w3-light-grey">@PortalUtils.SiteGuid()</div>
            </div>
        </div>
        <div class="w3-col m6 w3-padding">
        </div>
    </div>

    <div class="w3-container w3-border w3-margin-top">
        <div class="w3-col m3 w3-padding">
            ItemId:&nbsp;<b>@info.ItemID</b>
        </div>
        <div class="w3-col m3 w3-padding">
            @ResourceKey("RocketMod.apptheme"):&nbsp;<b>@remoteParams.AppThemeFolder</b>
        </div>
        <div class="w3-col m2 w3-padding">
            ModuleId:&nbsp;<b>@info.ModuleId</b>
        </div>
        <div class="w3-col m3 w3-padding">
            @ResourceKey("RocketMod.ref"):&nbsp;<b>@remoteParams.ModuleRef</b>
        </div>
    </div>


</div>

<div id="datasourcelist">
</div>

<script>

    $(document).ready(function () {

        $('.sharedataaction').unbind('change');
        $('.sharedataaction').change(function () {
            if ($('input[name=sharedataradio]:checked').val() === '0') {
                $('.sharedataicon').hide();
            }
            if ($('input[name=sharedataradio]:checked').val() === '1') {
                $('.sharedataicon').show();
                $('.sharedataicon').css('color', 'teal')
            }
            if ($('input[name=sharedataradio]:checked').val() === '2') {
                $('.sharedataicon').show();
                $('.sharedataicon').css('color', 'red')
            }
        });

        $('.detailviewcheckbox').unbind('click');
        $('.detailviewcheckbox').click(function () {
            if ($(this).prop('checked')) {
                $('.detailurlparam').show();
            }
            else {
                $('.detailurlparam').hide();
            }
        });

        if ($('.detailviewcheckbox').prop('checked')) {
            $('.detailurlparam').show();
        }

    });

    function reloadpage() {
        location.reload();
    }

</script>
