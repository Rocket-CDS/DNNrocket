            <label>@ResourceKey("RRM.securitykey")</label>
            @TextBox(info, "genxml/securitykey", "class='w3-input w3-border' maxlength='350' autocomplete='off'", "", false)
        </div>
        <div class="w3-col m6 w3-padding">
            <i>
