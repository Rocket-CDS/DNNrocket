@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using System
@using System.Linq
@using System.Xml
@using Simplisity;
@using DNNrocketAPI.Componants;
@using RocketMod;
@using RocketMod.Componants;


@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/RocketMod/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/RocketRemoteMod/App_LocalResources/")

@{
    var remoteParams = (RemoteLimpet)Model.List.First();
    var info = new SimplisityInfo(remoteParams.Record);
}


<div class="w3-row w3-padding ">
    <div class="w3-col m2 rocket-buttonbar w3-button w3-green w3-padding-8 langchangesave simplisity_click rocketmodsavebutton" s-cmd="rocketremotemod_saveconfig" s-fields='{"tabid":"@(Model.GetSetting("tabid"))","moduleid":"@(Model.ModuleId)","itemid":"@info.ItemID","interfacekey":"dashboard"}' s-post="#configdata">@ButtonText(ButtonTypes.save)</div>
    <div class="w3-col m2 rocket-buttonbar w3-button w3-red w3-padding-8 simplisity_confirmclick" s-after="reloadpage" s-confirm="@ResourceKey("RocketMod.resetmsg")" s-cmd="rocketremotemod_reset" s-fields='{"tabid":"@(Model.GetSetting("tabid"))","moduleid":"@(Model.ModuleId)"}'>@ResourceKey("RocketMod.resetconfig")</div>
    @if (Model.GetSettingBool("saved"))
    {
        <i class='fas fa-save simplisity_fadeout' style="font-size:24px"></i>
    }
</div>

<h1>@ResourceKey("RocketMod.config")</h1>

<div id="configdata" class="w3-container simplisity_panel">

    <div class="w3-row w3-padding">
        <div class="w3-col m6">
            <label>@ResourceKey("RocketMod.name")</label>
            @TextBox(info, "genxml/name", "class='w3-input w3-border' maxlength='350' autocomplete='off'", "", false)
        </div>
        <div class="w3-col m6">

        </div>
    </div>
    <div class="w3-row w3-padding">
        <div class="w3-col m12">
            <label>@ResourceKey("RRM.engineurl")</label>
            @TextBox(info, "genxml/engineurl", "class='w3-input w3-border' maxlength='1024' autocomplete='off'", "https://<domain>", false)
