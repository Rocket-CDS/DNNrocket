        </div>
    </div>
    <div class="w3-row w3-padding">
        <div class="w3-col m6">
            <label>@ResourceKey("RRM.appthemefolder")</label>
            @TextBox(info, "genxml/appthemefolder", "class='w3-input w3-border' maxlength='350' autocomplete='off'", "", false)
        </div>
        <div class="w3-col m6 w3-padding">
