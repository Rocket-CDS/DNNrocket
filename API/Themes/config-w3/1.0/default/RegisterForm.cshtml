@inherits DNNrocketAPI.render.DNNrocketTokens<Simplisity.SimplisityRazor>
@using Simplisity;

@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/API/App_LocalResources/")

<!-- Login form -->
<div id="registerform" class="w3-modal">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:400px">

        <div class="w3-center w3-padding">
            <br>
            <span onclick="hidelogin()" class="w3-button w3-xlarge w3-transparent w3-display-topright" title="@ResourceKey("login.CloseModal")">X</span>
            <img src="/DesktopModules/DNNrocket/api/images/img_avatar4.png" alt="Avatar" style="width:20%" class="w3-circle w3-margin-top">
        </div>

        <div class="w3-section w3-padding registerdata simplisity_panel">
            <div class="logininput">
                <label><b>@ResourceKey("login.Username")</b></label>
                <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="@ResourceKey("login.EnterUsername")" name="usrname" id="username" required>

                <label><b>@ResourceKey("login.Password")</b></label>
                <input class="w3-input w3-border" type="password" placeholder="@ResourceKey("login.enterpassword")" name="psw" id="password" required>
                <br />

                <span class="w3-button w3-block w3-green w3-section w3-padding simplisity_click" s-fields="" s-track="false" s-post=".registerdata" s-return=".registerreturn" s-cmd="rocketlicense_register" s-after="">@ResourceKey("login.Login")</span>

                <div class="w3-panel w3-orange w3-padding-16 registerreturn">@Model.HeaderData.GetXmlProperty("genxml/message")</div>

                <input class="w3-check w3-margin-top" type="checkbox" checked="checked" id="rememberme"><span>@ResourceKey("login.Rememberme")</span>

            </div>

        </div>

        <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
            <div class="logininput">
                <span onclick="hidelogin()" type="button" class="w3-button w3-red">@ResourceKey("login.Cancel")</span>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">

    function hidelogin() {
        $('#registerform').hide();
    }

</script>
