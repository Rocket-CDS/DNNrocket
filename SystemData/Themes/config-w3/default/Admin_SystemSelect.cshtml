@inherits DNNrocketAPI.render.DNNrocketTokens<Simplisity.SimplisityRazor>
@using Simplisity;

@AddMetaData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/DNNrocket/SystemData/App_LocalResources/")


<div class="w3-modal-content">

    <header class="w3-container w3-theme">
        <span onclick="document.getElementById('systemselect').style.display='none'" class="w3-button w3-display-topright">&times;</span>
        <h2>@ResourceKey("system.interfacecopy")</h2>
    </header>

    <div class="w3-row-padding w3-margin">
        <ul class="w3-ul w3-border w3-hoverable w-margin">

            @foreach (SimplisityInfo nbi in Model.List)
{
            <li class="selectsystem simplisity_click" s-cmd="systemapi_copyinterface" s-return="#messagecontainer" s-fields="theme:config-w3,template:Admin_Message.cshtml,fromsystemid:@Model.GetSetting("systemid"),tosystemid:@nbi.ItemID,interfacekey:@Model.GetSetting("interfacekey")" onclick="document.getElementById('systemselect').style.display='none'" ctrlkey="@nbi.GetXmlProperty("genxml/textbox/ctrlkey")">
                @nbi.GetXmlProperty("genxml/textbox/systemname")
            </li>
}

        </ul>
    </div>

    <footer class="w3-container w3-theme"></footer>

</div>
