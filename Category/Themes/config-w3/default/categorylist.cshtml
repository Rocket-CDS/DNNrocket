@AddMetaData("resourcepath", "/DesktopModules/DNNrocket/SystemData/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/DNNrocket/Category/App_LocalResources/")

@{
    var headerData = Model.HeaderData;
