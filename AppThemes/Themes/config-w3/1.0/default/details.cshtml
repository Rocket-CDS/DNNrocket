@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using System
@using System.Linq
@using System.Xml
@using Simplisity;
@using DNNrocketAPI.Componants;
@using DNNrocket.AppThemes;

@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/AppThemes/App_LocalResources/")

@{
    var appThemeData = (AppThemeData)Model.List.First();
}

@if (appThemeData.AppName == "")
{

    <span class="w3-section simplisity_buttons">
    </span>

    <h2>@ResourceKey("AppThemes.builder")</h2>

    <div class="w3-row-padding w3-padding">
        <div class="w3-col m1">
            &nbsp;
        </div>
        <div class="w3-col m3">
            <div class="w3-panel w3-leftbar w3-border-indigo w3-theme-l4 w3-center w3-hover-shadow simplisity_click" s-cmd="rocketapptheme_actiontype" s-post="" s-fields="actiontype:new,interfacekey:dashboard" style="height:200px;cursor: pointer">
                <h1 class="w3-theme">@ResourceKey("AppThemes.new")</h1>
                <p>@ResourceKey("AppThemes.newmsg")</p>
            </div>
        </div>
        <div class="w3-col m3">
            <div class="w3-panel w3-leftbar w3-border-indigo w3-theme-l4 w3-center w3-hover-shadow simplisity_click" s-cmd="rocketapptheme_actiontype" s-post="" s-fields="actiontype:version,interfacekey:dashboard" style="height:200px;cursor: pointer">
                <h1 class="w3-theme">@ResourceKey("AppThemes.version")</h1>
                <p>@ResourceKey("AppThemes.versionmsg")</p>
            </div>
        </div>
        <div class="w3-col m3">
            <div class="w3-panel w3-leftbar w3-border-indigo w3-theme-l4 w3-center w3-hover-shadow simplisity_click" s-cmd="rocketapptheme_actiontype" s-post="" s-fields="actiontype:edit,interfacekey:dashboard" style="height:200px;cursor: pointer">
                <h1 class="w3-theme">@ResourceKey("AppThemes.edit")</h1>
                <p>@ResourceKey("AppThemes.editmsg")</p>
            </div>
        </div>
        <div class="w3-col m2">
            &nbsp;
        </div>
    </div>

}
else
{
    @RenderTemplate("AppThemeDetails.cshtml", "/DesktopModules/DNNrocket/AppThemes/Admin", "config-w3", Model)
}


<script>

            $(document).ready(function () {

                simplisity_setCookieValue('editlang', '@appThemeData.CultureCode')

                @if (appThemeData.AppName == "")
                {
                    @:$('.tabmenu').hide();
                }

            });

</script>
