@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using System
@using System.Linq
@using System.Xml
@using Simplisity;
@using DNNrocketAPI.Componants;


@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/RocketMod/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/AppThemes/Themes/HtmlContent/resx/")

@{
    var imagewidth = Model.Datainfo.GetXmlPropertyInt("genxml/imagelist/genxml[1]/textbox/widthimagepath");
    var imageheight = Model.Datainfo.GetXmlPropertyInt("genxml/imagelist/genxml[1]/textbox/heightimagepath");
    var imagealt = Model.Datainfo.GetXmlProperty("genxml/imagelist/genxml[1]/textbox/altimagepath");
    var imagepath = Model.Datainfo.GetXmlProperty("genxml/imagelist/genxml[1]/hidden/imagepath");

    var imagewidth2 = Model.Datainfo.GetXmlPropertyInt("genxml/imagelist/genxml[2]/textbox/widthimagepath");
    var imageheight2 = Model.Datainfo.GetXmlPropertyInt("genxml/imagelist/genxml[2]/textbox/heightimagepath");
    var imagealt2 = Model.Datainfo.GetXmlProperty("genxml/imagelist/genxml[2]/textbox/altimagepath");
    var imagepath2 = Model.Datainfo.GetXmlProperty("genxml/imagelist/genxml[2]/hidden/imagepath");

}

<div class="w3-row">

    @if (imagepath != "")
    {
        <div class="w3-padding" style="float: left">
            <img src="/DesktopModules/DNNrocket/API/DNNrocketThumb.ashx?src=@imagepath&w=@imagewidth&h=@imageheight" alt="@imagealt" />
        </div>
    }
    @if (imagepath2 != "")
    {
        <div class="w3-padding" style="float: right">
            <img src="/DesktopModules/DNNrocket/API/DNNrocketThumb.ashx?src=@imagepath2&w=@imagewidth2&h=@imageheight2" alt="@imagealt2" />
        </div>
    }

    <div class="w3-padding">
        @HtmlOf(Model.Datainfo.GetXmlProperty("genxml/lang/genxml/textbox/richtext"))
    </div>

</div>
