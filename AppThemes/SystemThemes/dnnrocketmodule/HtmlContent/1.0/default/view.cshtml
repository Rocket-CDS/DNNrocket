@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using Simplisity;
@using RocketMod;


@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/Images/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/AppThemes/SystemThemes/dnnrocketmodule/HtmlContent/1.0/resx/")

@{
    var articleDataList = (ArticleDataList)Model.List.First();
}

@foreach (var info in articleDataList.DataList)
{
    	<div class='w3-col m2 w3-padding'>
		@info.GetXmlProperty("genxml/textbox/aaaaaaa")
	</div>
	<div class='w3-col m2 w3-padding'>
		@info.GetXmlProperty("genxml/textbox/tesfield2")
	</div>
	<div class='w3-col m2 w3-padding'>
		@info.GetXmlProperty("genxml/lang/genxml/textbox/ccccccc")
	</div>
	<div class='w3-col w3-padding' style='width:80px;'>
@if (info.GetXmlProperty("genxml/hidden/img") != "")
{
	<img src="@ThumbnailImageUrl(info.GetXmlProperty("genxml/hidden/img"), 60 , 60)" />
}
else
{
	<img src='/DesktopModules/DNNrocket/API/DNNrocketThumb.ashx?src=/DesktopModules/DNNrocket/api/images/noimage2.png&w=60&h=60' imageheight='60' imagewidth='60'>
}
	</div>
	<div class='w3-col w3-padding' style='width:80px;'>
@if (info.GetListItem("imagelist", 0).GetXmlProperty("genxml/hidden/imagepath") != "")
{
	<img src="@ThumbnailImageUrl(info.GetListItem("imagelist", 0).GetXmlProperty("genxml/hidden/imagepath"), 60 , 60)" />
}
else
{
	<img src='/DesktopModules/DNNrocket/API/DNNrocketThumb.ashx?src=/DesktopModules/DNNrocket/api/images/noimage2.png&w=60&h=60' imageheight='60' imagewidth='60'>
}
	</div>

}


