@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using System
@using System.Linq
@using System.Xml
@using Simplisity;
@using DNNrocketAPI.Componants;

@AddMetaData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")

@{
    var info = (SimplisityInfo)Model.List.First();
}


<div id="dnnrocketconfig_@(info.ModuleId)" class="simplisity_panel">

    <div class="w3-center w3-margin">
        <span class="w3-button w3-green w3-padding-8 redirectsetup_@(info.ModuleId)">@ResourceKey("DNNrocket.cmdConfigButton")</span>
    </div>
</div>

<script>

    $(document).ready(function () {
        
        $('.redirectsetup_@(info.ModuleId)').unbind("click");
        $('.redirectsetup_@(info.ModuleId)').click(function () {
            // redirect to admin page with return cookie.
            simplisity_setCookieValue('rocketmod_return', window.location.href);
            window.location = "/desktopmodules/dnnrocket/RocketMod/admin.aspx?tabid=@(Model.GetSetting("tabid"))&moduleid=@(info.ModuleId)&cmd=rocketmod_selectapptheme";
        });

    });

</script>