@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using System
@using System.Linq
@using System.Xml
@using Simplisity;
@using DNNrocketAPI.Componants;

@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")

@{
    var info = (SimplisityInfo)Model.List.First();
}

<link rel="stylesheet" href="/DesktopModules/DNNrocket/css/w3.css">
<link rel="stylesheet" href="/DesktopModules/DNNrocket/fa/css/all.min.css">

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/v4-shims.css">

<script type="text/javascript" src='/DesktopModules/DNNrocket/Simplisity/js/simplisity.js'></script>
<script type="text/javascript" src="/DesktopModules/DNNrocket/Simplisity/js/jquery.fileupload.js"></script>


<div id="dnnrocketconfig_@(info.ModuleId)" class="simplisity_panel">

    <div class="w3-center w3-margin">
        <span class="w3-button w3-green w3-padding-8 redirectsetup_@(info.ModuleId)">@ResourceKey("DNNrocket.cmdConfigButton")</span>
    </div>
</div>

<script>

    $(document).ready(function () {

        $('.redirectsetup_@(info.ModuleId)').unbind("click");
        $('.redirectsetup_@(info.ModuleId)').click(function () {
            // redirect to admin page with return cookie.
            simplisity_setCookieValue('rocketmod_return', window.location.href);
            window.location = "/desktopmodules/dnnrocket/RocketMod/admin.html?tabid=@(Model.GetSetting("tabid"))&moduleid=@(info.ModuleId)&cmd=rocketmod_selectapptheme";
        });


    });

</script>