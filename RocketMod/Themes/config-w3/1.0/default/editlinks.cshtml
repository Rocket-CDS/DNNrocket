@inherits RocketMod.RocketModTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI;
@using Simplisity;

@using RocketMod;

@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocketModules/RocketMod/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/RocketMod/App_LocalResources/")

@{
    //NOTE: This template is designed to have 1 imagelist on the template.
    // If more than 1 image list is required, a new template is required.
    var articleData = (ArticleLimpet)Model.List.First();
    var linkLP = 0;
    var datalist = articleData.GetLinks();
    var info = articleData.Info;

}

@if (!Model.GetSettingBool("hideheading"))
{
    <div class="w3-container w3-theme w3-padding linkheader">
        <label>@ResourceKey("DNNrocket.links")</label>
    </div>
}


<div class="w3-row linklistdatasection">

    <div class="w3-container">
        <div class="w3-col w3-padding" style="width:160px;">
            <div class="w3-button w3-teal w3-padding-8 simplisity_click" s-post="#datasection" s-list="@(articleData.ListSelectorcCVS)" s-cmd="rocketmodedit_addlink" s-fields='{"articleid":"@(articleData.ArticleId)"}'><i class='fas fa-plus-circle'></i></div>
            <div class="w3-button w3-pale-yellow w3-padding-8 simplisity_itemundo" s-recylebin="linklistbin" s-return="#linklistdata" s-removelist=".linklist" style="display: none;"><i title="Add New" class="fas fa-undo fa-fw fa-lg"></i></div>
        </div>
    </div>

    <ul id="linklistdata" class="w3-ul">

        @foreach (var linkData in datalist)
        {
            <li class="linklist w3-half w3-display-container w3-padding w3-border-0">
                @SortableListIndex(linkData.Info, linkLP)

                <div class="w3-display-container w3-padding w3-card">
                    <div class="w3-row">

                        <div class="w3-col m6">
                            @RadioButtonList(linkData.Info, "genxml/radio/linktype", "1,2", ResourceKey("RocketMod.internallink") + "," + ResourceKey("RocketMod.externallink"), " class='linktypeclick' linkrow='" + linkLP + "' ", "1", "", false, linkLP)
                        </div>
                        <div class="w3-col m3">
                            @CheckBox(linkData.Info, "genxml/checkbox/blank", "&nbsp;" + ResourceKey("RocketMod.blank").ToString(), " class='w3-check' ", false, false, linkLP)
                        </div>
                        <div class="w3-col m3">
                            @CheckBox(linkData.Info, "genxml/checkbox/hide", "&nbsp;" + ResourceKey("RocketMod.hidelink").ToString(), " class='w3-check' ", false, false, linkLP)
                        </div>

                        @{
                            var linktype = linkData.Info.GetXmlPropertyInt("genxml/radio/linktype");
                            var internaldisplay = "";
                            var externaldisplay = "display:none;";
                            if (linktype == 2)
                            {
                                internaldisplay = "display:none;";
                                externaldisplay = "";
                            }
                        }

                        <div class="w3-col m12">
                            <label>@ResourceKey("RocketMod.text")</label>&nbsp;@EditFlag()
                            @TextBox(linkData.Info, "genxml/lang/genxml/textbox/name", " class='w3-input w3-border' autocomplete='off'", "", true, linkLP)
                        </div>
                        <div class="w3-col m12 internallink@(linkLP)" style="@(internaldisplay);height:64px;">
                            <label>@ResourceKey("RocketMod.page")</label>
                            @TabSelectList(linkData.Info, "genxml/select/internallink", " class='w3-input w3-border' ", true, false, linkLP)
                        </div>
                        <div class="w3-col m12 externallink@(linkLP)" style="@(externaldisplay);height:64px;">
                            <label>@ResourceKey("RocketMod.url")</label>&nbsp;@EditFlag()
                            @TextBox(linkData.Info, "genxml/lang/genxml/textbox/externallink", " class='w3-input w3-border' autocomplete='off'", "https://", true, linkLP)
                        </div>

                        <div class="w3-col m6">
                            <label class="">@ResourceKey("RocketMod.anchor")</label>
                            @TextBox(linkData.Info, "genxml/textbox/anchor", " class='w3-input w3-border' autocomplete='off'", "", false, linkLP)
                        </div>
                        <div class="w3-col m6">
                        </div>

                    </div>
                    <div class="simplisity_removelistitem w3-display-topright" s-removelist=".linklist" s-recylebin="linklistbin" style="cursor: pointer;">
                        <i title="@ResourceKey("DNNrocket.delete")" class=" fas fa-minus-square fa-fw fa-lg"></i>
                    </div>
                </div>
            </li>
            linkLP += 1;
        }
    </ul>

</div>

<script>
    $(document).ready(function () {
        $("#linklistdata").sortable();
        $("#linklistdata").disableSelection();

        $('.linktypeclick').unbind('click');
        $('.linktypeclick').click(function () {
            var linkrow = $(this).attr("linkrow");
            var selectedval = $(this).find(":checked").val();
            if (selectedval === '1') {
                $('.internallink' + linkrow).show();
                $('.externallink' + linkrow).hide();
            }
            if (selectedval === '2') {
                $('.internallink' + linkrow).hide();
                $('.externallink' + linkrow).show();
            }
        });


    });

</script>
